<div id="label-<%=task.label_id%>-task-<%=task.id%>" data-controller="move-task" data-to="task" data-priority="<%= task.priority %>" data-project="<%= @current_project.id %>" data-label="<%= task.label_id %>" data-task="<%= task.id %>" data-move-task-target="move" draggable="true" data-action="dragstart->move-task#dragStart dragend->move-task#dragEnd drop->move-task#drop dragenter->move-task#dragEnter 
  dragleave->move-task#dragLeave dragover->move-task#dragOver click->move-task#detail" class="p-2 bg-white border border-gray-200 rounded-lg shadow">
    <h5 data-action="click->move-task#detail" data-project="<%= @current_project.id %>" data-label="<%= task.label_id %>" data-task="<%= task.id %>" class="mb-2 tracking-tight text-gray-900 dark:text-white"><%= task.name %></h5>
    <div data-action="click->move-task#detail" data-project="<%= @current_project.id %>" data-label="<%= task.label_id %>" data-task="<%= task.id %>" class="d-flex justify-between items-center">
      <%= show_level(task.level).html_safe%>
      <%= turbo_frame_tag "assign-#{task.id}" do %>
        <%= render partial: "tasks/assign_member", locals: {assign: task.assign } if task.assign.present? %>
      <% end %>
    </div>
</div>
