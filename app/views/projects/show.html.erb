<div data-controller="project">
  <% if is_manager(@project) %>
    <div class="d-flex justify-content-end align-items-center gap-2">   
      <%= link_to "New Label" , new_project_label_path(@project), class: "btn btn-primary btn-tone hover:text-white m-r-20" %>
      <%= link_to "Invite member" , project_members_path(@project), class: "btn btn-primary btn-tone hover:text-white m-r-20" %>
    </div>
    <% end %>
  <div class="d-flex flex-column flex-sm-row gap-2">
    <div class="label-list w-full">
      <h1 class="text-uppercase">
        <%= @project.name %>
      </h1>
      <% @project.labels.asc_priority.each do |label| %>
        <%= render partial: "projects/item" , locals: {label: label} %>
      <% end %>
    </div>
    <div class="member-list w-full">
      <h1 class="text-uppercase">
        Members
      </h1>
      <% @project.members.asc_priority.each do |member| %>
        <%= render partial: "users/user", locals: { user: member.user, is_send: false, status: member.accept, project: @project}%>
      <% end %>
    </div>
  </div>
</div>
