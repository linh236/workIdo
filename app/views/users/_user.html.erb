<div class="p-2 mb-2 max-w-sm bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-900">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex gap-2 align-items-center">
      <%= image_tag user.avatar, class: "w-[70px] h-[70px] rounded-full" if user.avatar.attached?%>
      <div>
        <h5 class="mb-0 tracking-tight text-gray-900 dark:text-white"><%= user.full_name %></h5>
        <p class="mb-0 font-normal text-gray-500 dark:text-gray-400"><%= user.email %></p>
        <% if !is_send.present? %>
        <p class="mb-0 font-normal text-gray-500 dark:text-gray-400"><%= status(status) %></p>
        <% end %>
      </div>
    </div>
    <%= link_to "Send", project_invite_member_path(@current_project, user), class: "btn btn-sm btn-primary btn-tone hover:text-white" if is_send.present? %>
    <%= link_to "X", project_remove_member_path(project, user.id), data: { turbo_method: :delete }, class: "btn btn-sm btn-danger btn-tone hover:text-white" if !is_send.present? && is_manager(project)%>
  </div>
</div>